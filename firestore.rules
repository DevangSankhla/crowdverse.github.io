rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ── Helper function for admin check ──────────────────────────────
    function isAdmin() {
      return request.auth != null 
        && request.auth.token.email == 'founder@crowdverse.in';
    }

    // ── Users ────────────────────────────────────────────────────────
    match /users/{userId} {
      // Users can read their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      // Users can update their own data, but tokens must stay >= 0
      allow update: if request.auth != null && request.auth.uid == userId
        && request.resource.data.tokens >= 0;
      // Admin can read/write ALL user data (for token management)
      allow read, write: if isAdmin();
    }

    // ── Markets ──────────────────────────────────────────────────────
    match /markets/{marketId} {
      // Public read for live markets
      allow read: if true;
      
      // Admin can read/write all markets
      allow read, write: if isAdmin();
      
      // Any logged-in user can increment the token counter only
      allow update: if request.auth != null
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['tokens']);

      // Any logged-in user can create a market
      allow create: if request.auth != null;

      // ── Votes subcollection ───────────────────────────────────────
      match /votes/{voteId} {
        allow read:          if request.auth != null;
        allow create:        if request.auth != null
          && request.resource.data.userId == request.auth.uid
          && request.resource.data.amount is number
          && request.resource.data.amount >= 10;
        allow update, delete: if false;
      }
    }

    // ── Notifications ─────────────────────────────────────────────────
    match /notifications/{notifId} {
      allow read:  if request.auth != null && resource.data.userId == request.auth.uid;
      allow write: if isAdmin();
    }
  }
}
